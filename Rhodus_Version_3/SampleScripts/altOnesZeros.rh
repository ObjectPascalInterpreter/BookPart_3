print ("Please Enter the total Number of Rows  : ")
rows = int(readNumber())
print ("Please Enter the total Number of Columns  : ")
columns = int(readNumber())

println("Print Number Pattern - 1 and 0 in alternative Columns") 

for i = 1 to rows + 1 do
    for j = 1 to columns + 1 do
        if (j mod 2 == 0) then          
            print("0 ")
        else
            print("1 ")
        end
    end 
    println()
end
